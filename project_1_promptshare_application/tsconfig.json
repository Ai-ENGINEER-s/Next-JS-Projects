{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // "@/components/*" : ["components/"] , 
      // "@styles/*"    :["styles/*"]  

      // or you can just import them all by doing that 

      "@/*" : ["./*"]  
      // this means simply take it from the root route and take everything 
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext" , 

    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
